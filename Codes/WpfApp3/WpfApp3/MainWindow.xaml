<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Login Here" Height="300" Width="600">
    <Grid Margin="0,0,0,-6">
        <TextBox HorizontalAlignment="Left" Margin="271,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="139" Text="{Binding Text, ElementName=textBox}"/>
        <TextBlock HorizontalAlignment="Left" Margin="140,82,0,0" Text="User Name" TextWrapping="Wrap" VerticalAlignment="Top" Width="69"/>
        <TextBlock HorizontalAlignment="Left" Margin="140,0,0,0" Text="Password" TextWrapping="Wrap" VerticalAlignment="Center" Height="18" Width="69"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="271,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="139"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="271,198,0,0" VerticalAlignment="Top" Height="35" Width="90" Background="#FF43BD1F"/>

    </Grid>
</Window>
