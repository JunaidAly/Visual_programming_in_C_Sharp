<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="111,131,0,0" Text="User Name" TextWrapping="Wrap" VerticalAlignment="Top" Height="19" Width="70"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Margin="220,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169" Height="21" Text="{Binding Text, ElementName=textBox}"/>
        <TextBlock HorizontalAlignment="Left" Margin="111,182,0,0" Text="Password" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="70"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="220,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169" Height="21" Text="{Binding Text, ElementName=textBox1}"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="262,237,0,0" VerticalAlignment="Top" Height="30" Width="82" Background="#FF478F00"/>

    </Grid>
</Window>
